<body class="album_new_body">
<h1>ユーザー登録</h1>
<% if @album.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@album.errors.count, "error") %> prohibited this <%= @album.name %> from being saved:</h2>
    <ul>
    <% @album.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @album, local: true) do |f| %>
<table class="album_new_table">
  <tr>
  <th><%= f.label :name, "名前" %></th>
  <th><%= f.text_field :name %></th>
  </tr>
<tr>
  <th><%= f.label :email, "メールアドレス" %></th>
  <th><%= f.email_field :email %></th>
</tr>
<tr>
  <th><%= f.label :password, "パスワード" %></th>
  <th><%= f.password_field :password %></th>
</tr>
<tr>
  <th><%= f.label :password_confirmation, "確認用パスワード" %></th>
  <th><%= f.password_field :password_confirmation %></th>
</tr>
<tr>
  <th></th>
  <th id= "make_account" ><%= f.submit "アカウントを作成" %></th>
  </tr>
<% end %>
</table>
</body>
