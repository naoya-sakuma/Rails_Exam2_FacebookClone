<%= form_with(model: @feed, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
    <%= form.label :image, "画像の投稿" %>
    <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    </p>
    <p>
    <%= form.label :content, "内容の投稿" %>
    <%= form.text_field :content %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
